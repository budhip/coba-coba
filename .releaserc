{
    "branches": [
        "master",
        "hotfix/acuan-publishing-timeout-fail-open-2"
    ],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/changelog", {
                "changelogFile": "CHANGELOG.md",
                "changelogTitle": "# Semantic Versioning Changelog"
            }
        ],
        [
            "@semantic-release/exec", {
                "prepareCmd": "echo ${nextRelease.version} > ./semantic_version.txt"
            }
        ],
        [
            "@semantic-release/git", {
                "assets": [ "CHANGELOG.md", "reports/static-code-analysis.html" ],
                "message": "released new version [skip ci]: ${nextRelease.version}\n\n${nextRelease.notes}"
            }
        ]
    ]
}